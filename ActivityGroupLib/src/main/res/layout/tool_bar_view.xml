<?xml version="1.0" encoding="utf-8"?>
<com.hongbo.lib.activitygrouplib.widget.ToolBarView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tool_bar_view"
        android:layout_width="match_parent"
        android:layout_height="?attr/toolBarSize"
        android:background="?attr/toolBarBackground">

    <FrameLayout android:layout_width="wrap_content"
                 android:layout_gravity="center_vertical"
                 android:layout_height="wrap_content">

        <ImageView android:id="@+id/tool_bar_icon"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_gravity="center_vertical|left"
                   android:scaleType="centerInside"
                   android:src="?attr/toolBarIcon"
                   android:paddingLeft="15dp"
                   android:background="?attr/toolBarIconBackground"/>

        <TextView android:id="@+id/tool_bar_left_txt"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  style="?attr/toolBarTitleStyle"/>

    </FrameLayout>

    <TextView android:id="@+id/tool_bar_title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              style="?attr/toolBarTitleStyle"/>

    <FrameLayout android:id="@+id/tool_bar_custom"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"/>
</com.hongbo.lib.activitygrouplib.widget.ToolBarView>